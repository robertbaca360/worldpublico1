<%= render'layouts/header' %>
<div class="container">
  <div class="col-sm-6 col-sm-offset-3 singup wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="600ms">
    <div class="modal-header">
     <h3 class="modal-title title_details">Login to our site</h3>
      <!--<span class="alert">-->
        <!--<%= notice %>-->
        <!--<%= alert %>-->
      <!--</span>-->
    </div>
    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name) ) do |f| %>
       <div class="form-group">

            <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Email" %><br />

        </div>
        <div class="form-group">

            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"Password" %>

        </div>
        <div class="form-group">
          <div class="row check_status_remember">
            <div class="col-md-4">

              <%= f.check_box :remember_me%>
              <%= f.label :remember_me%>

            </div>
          </div>
        </div>
        <div class="form-group">

            <%= f.submit "Sign in", class:"btn btn-primary" %>

        </div>
      <% end %>
    </div>
    <div class="modal-footer social">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
<script>
    $('form.new_user').addClass('form-horizontal');
</script>

